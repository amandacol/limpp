<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@700&display=swap" rel="stylesheet">
<div class="container-fluid mt-3">
  <style>
    body{
      background-color: #8F89DD;
    }
    h1{
      font-family: 'Quicksand', sans-serif;
      color: white;
      font-size: 70px;
    }
    .btn-face {
          color: white;
          background-color: #3A10AA;
          border-radius: 30px;
          padding: 0.4rem 1rem;
          font-weight: bold;
          font-family: 'Montserrat', sans-serif;
          font-size: 15px;
    }
    .btn-face:hover {
      box-shadow: 0px 0px 0px rgba(0, 0, 0, 0) !important;
    }
    .btn-login{
      color: #33D89E;
      background-color: white;
      border-radius: 30px;
      padding: 0.4rem 4rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 15px;
    }
    .background{
      background-color: #B1ADE7;
      border-radius: 30px;
    }
    p{
      color: white;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size:14px;
      font-weight: bold;
    }
    i {
      margin-right: 20px;
    }
    .btn-cadastrar{
      color: white;
      background-color: #333132;
      border-radius: 30px;
      padding: 0.5rem 2rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 13px;
      box-shadow: 0px 2px 2px #33313261;
    }
    .simple_form label {
      color: white;
      font-family: 'Montserrat', sans-serif;
      font-size:13px;
      font-weight: bold;
      margin-left: 10px;
    }
    .text-muted{
      color: white !important;
      font-family: 'Montserrat', sans-serif !important;
      font-size:11px !important;
      font-weight: bold !important;
      margin-left: 10px;
    }
  </style>
    <h1 class="text-center">limpp</h1>
    <div class="positionuser d-flex justify-content-center mt-4">
      <%= image_tag "usuario2.svg" %>
    </div>
    <div class="background p-4">
      <p class="text-center">Preencha seus dados abaixo:</p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs ml-3 mr-3">
        <%= f.input :email,
                    required: true,
                    label: "Seu email",
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'rounded-pill' }%>
        <%= f.input :password,
                    required: true,
                    label: "Crie uma senha",
                    hint: ("mínimo de #{@minimum_password_length} dígitos" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: 'rounded-pill' } %>
        <%= f.input :password_confirmation,
                    label: "Confirme a senha",
                    required: true,
                    input_html: { autocomplete: "new-password", class: 'rounded-pill' } %>
      </div>

      <div class="form-actions mt-2 d-flex justify-content-start ml-3">
        <%= f.button :submit, "Cadastrar", class:"btn btn-cadastrar" %>
      </div>
    <% end %>
    </div>
    <% unless current_user %>
      <div>
        <%= link_to '<i class="fab fa-facebook-f"></i>  Entrar com Facebook'.html_safe, user_facebook_omniauth_authorize_path, class: "btn btn-face d-flex justify-content-center mt-3 mr-5 ml-5" %>
      </div>
    <% else %>
  <%= current_user[:name] %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-limpp" %>
<% end %>
    <div class="d-flex justify-content-center mt-3">
        <%=    link_to 'Já possuo login', user_session_path, class: "btn btn-login mb-4" %>
    </div>
</div>
