<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@700&display=swap" rel="stylesheet">
<div class="container-fluid mt-5">
  <style>
    body{
      background-color: #67D89E;
    }
    h1{
      font-family: 'Quicksand', sans-serif;
      color: white;
      font-size: 70px;
    }
    .btn-nologin{
      color: #67D89E;
      background-color: white;
      border-radius: 30px;
      padding: 0.5rem 4rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 15px;
    }
    .background{
      background-color: #71E4BB;
      border-radius: 30px;
    }
    p{
      color: #333132;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
    }
    .btn-face {
      color: white;
      background-color: #3A10AA;
      border-radius: 30px;
      padding: 0.5rem 4rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 15px;
    }
    .btn-face:hover {
      box-shadow: 0px 0px 0px rgba(0, 0, 0, 0) !important;
    }
    .btn-google {
      color: white;
      background-color: #BF2D04;
      border-radius: 30px;
      padding: 0.5rem 4rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 15px;
    }
    .btn-google:hover {
      box-shadow: 0px 0px 0px rgba(0, 0, 0, 0) !important;
    }
    i {
      margin-right: 20px;
    }
    .btn-cadastrar{
      color: white;
      background-color: #333132;
      border-radius: 30px;
      padding: 0.5rem 2rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 13px;
      box-shadow: 0px 2px 2px #33313261;
    }
    .btn-inicio{
      color: white;
      border-radius: 30px;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 13px;
      padding-bottom: 0px;
      padding-top: 12px;
    }
    .label{
      color: white;
    }
    .forgot{
      text-decoration: underline;
      font-family: 'Montserrat', sans-serif;
      color:white;
    }
    .simple_form label {
      color: #333132;
      font-family: 'Montserrat', sans-serif;
    }
  </style>
<h1 class="text-center mb-3">limpp</h1>
  <div class="background p-4">
    <p class="d-flex justify-content-center">Já possui cadastro? Faça seu login.</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    label: "Seu e-mail",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'rounded-pill' } %>
        <%= f.input :password,
                    label: "Sua senha",
                    required: false,
                    input_html: { autocomplete: "current-password", class: 'rounded-pill' } %>
        <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Lembrar login", class: 'deviselabels' %>
        <% end %>
      </div>

      <div class="form-actions mt-2">
        <%=    link_to 'Esqueceu a senha?', new_user_password_path, class: "forgot mt-3 mr-4" %>
        <%= f.button :submit, "Entrar", class:"btn btn-cadastrar" %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-2">
        <%=    link_to 'Sem conta? Crie agora!', new_user_registration_path, class: "btn btn-nologin mt-4" %>
  </div>
        <%= link_to '<i class="fab fa-google mt-1"></i>  Entrar com Google'.html_safe, user_google_oauth2_omniauth_authorize_path, class: "btn btn-google d-flex justify-content-center mt-3" %>
        <%=    link_to '<i class="fab fa-facebook-f"></i>  Entrar com Facebook'.html_safe, user_facebook_omniauth_authorize_path, class: "btn btn-face d-flex justify-content-center mt-3" %>
</div>
