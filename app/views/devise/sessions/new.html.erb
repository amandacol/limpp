<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@700&display=swap" rel="stylesheet">
<div class="container-fluid mt-3">
  <style>
    body{
      background-color: #67D89E;
    }
    h1{
      font-family: 'Quicksand', sans-serif;
      color: white;
      font-size: 70px;
    }
    p{
      color: #333132;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size:14px;
      font-weight: bold;
    }
    .btn-cadastro{
      color: white;
      background-color: #333132;
      border-radius: 30px;
      padding: 0.4rem 1.5rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 13px;
      box-shadow: 0px 2px 2px #33313261;
      margin-left:5px;
    }
    .btn-nologin{
      color: #8F89DD;
      background-color: white;
      border-radius: 30px;
      padding: 0.3rem 4rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 14px;
    }

    .btn-face {
          color: white;
          background-color: #3A10AA;
          border-radius: 30px;
          padding: 0.5rem 1rem;
          font-weight: bold;
          font-family: 'Montserrat', sans-serif;
          font-size: 15px;
    }
    .btn-face:hover {
      box-shadow: 0px 0px 0px rgba(0, 0, 0, 0) !important;
    }

    @media (min-width: 768px) {
      .btn-face {
          color: white;
          background-color: #3A10AA;
          border-radius: 30px;
          padding: 0.5rem 1rem;
          font-weight: bold;
          font-family: 'Montserrat', sans-serif;
          font-size: 15px;
          width: 260px;
          margin-left: 600px;
    }

    }
    .background{
      background-color: #71E4BB;
      border-radius: 30px;
    }
    i {
      margin-right: 20px;
    }

    .simple_form label {
      color: #333132;
      font-family: 'Montserrat', sans-serif;
      font-size:13px;
      font-weight: bold;
      margin-left: 10px;
    }
  </style>
<h1 class="text-center mb-4">limpp</h1>
    <p class="d-flex justify-content-center sessions">Já possui cadastro? Faça seu login.</p>
  <div class="background largedevise">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    label: "Seu e-mail",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'rounded-pill' } %>
        <%= f.input :password,
                    label: "Sua senha",
                    required: false,
                    input_html: { autocomplete: "current-password", class: 'rounded-pill' } %>
        <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Lembrar login", class: 'deviselabels' %>
        <% end %>
      </div>

      <div class="form-actions mt-2">
        <%=    link_to 'Esqueceu a senha?', new_user_password_path, class: "forgot mt-3 mr-4" %>
        <%= f.button :submit, "Entrar", class:"btn btn-cadastro" %>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-2">
        <%= link_to new_user_registration_path, class:"btn btn-nologin mt-4" do %>
         <div class="d-flex"><%= image_tag "purpleuser.svg", class:"usersize" %><figcaption class="ml-3 mt-1"> Sem conta? Crie agora!</figcaption></div>
        <% end %>

  </div>

        <%=    link_to '<i class="fab fa-facebook-f mt-1"></i>  Entrar com Facebook'.html_safe, user_facebook_omniauth_authorize_path, class: "btn btn-face d-flex justify-content-center mt-3 mb-5" %>

</div>
