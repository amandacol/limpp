<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@700&display=swap" rel="stylesheet">
<div class="container-fluid mt-5">
  <style>
    body{
      background-color: #67D89E;
    }
    h1{
      font-family: 'Quicksand', sans-serif;
      color: white;
      font-size: 70px;
    }
    .btn-nologin{
      color: #8F89DD;
      background-color: white;
      border-radius: 30px;
      padding: 0.5rem 2rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 15px;
    }
    p{
      color: white;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
    }
    .btn-limpp {
      color: white;
      background-color: #3A10AA;
      border-radius: 30px;
      padding: 0.5rem 2rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 15px;
    }
    .btn-limpp:hover {
      box-shadow: 0px 0px 0px rgba(0, 0, 0, 0) !important;
    }
    i {
      margin-right: 20px;
    }
    .btn-cadastrar{
      color: white;
      background-color: #333132;
      border-radius: 30px;
      padding: 0.5rem 2rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 13px;
      box-shadow: 0px 2px 2px #33313261;
    }
    .btn-inicio{
      color: white;
      border-radius: 30px;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 13px;
      padding-bottom: 0px;
      padding-top: 12px;
    }
    .label{
      color: white;
    }
  </style>
<h1 class="text-center">limpp</h1>
<div class="d-flex justify-content-center mt-4">
  <%= image_tag "usuario.svg" %>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                label: "Digite seu email",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'rounded-pill' } %>
    <%= f.input :password,
                label: "Digite sua senha",
                required: false,
                input_html: { autocomplete: "current-password", class: 'rounded-pill' } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mt-2 d-flex justify-content-end">
    <%= f.button :submit, "Log in", class:"btn btn-cadastrar" %>
  </div>
<% end %>
  <div class="mt-2">
      <%= link_to root_path, class:"btn btn-inicio" do %>
        <figure class="d-flex align-items-center">
           <%= image_tag "inicio.png" %><figcaption class="ml-2 mt-1">Início</figcaption>
        </figure>
      <% end %>
  </div>
  <div class="d-flex justify-content-center mt-2">
        <%=    link_to 'Não tem login ainda? Clique aqui!', new_user_registration_path, class: "btn btn-nologin" %>
  </div>

<%= render "devise/shared/links" %>
