<div class="inlinemobile">
<div class="d-flex">
    <%= image_tag "saude.svg", class:"margemlegenda" %>
    <p class="marginlegend">Risco à saúde</p>
</div>
</div>
<div class="inlinemobile">
<div class="d-flex riscomeioa">
    <%= image_tag "ambiente.svg", class:"margemlegendaambiente" %>
    <p class="marginlegendambiente">Risco ao meio ambiente</p>
</div>
</div>
<div class="inlinemobile">
<div class="d-flex">
    <%= image_tag "alergia.svg", class:"margemlegendaalergenic" %>
    <p class="marginlegend">Potencial alergênico</p>
</div>
</div>
</div>
<div class="colorlegenda inlinedesk">
<div class="inlinemobile">
<div class="d-flex">
<span class="dotgreen"></span>
<p class="criterioslegenda"> Seguro em cosméticos </p>
</div>
</div>
<div class="inlinemobile">
<div class="d-flex">
<span class="dotyellow"></span>
<p class="criterioslegendayellow"> Seguro em cosméticos, com restrições </p>
</div>
</div>
<div>
<div class="inlinemobile">
<div class="d-flex">
<span class="dotorange"></span>
<p class="criterioslegendaorange"> Classificados como seguros, mas ainda em avaliação  </p>
</div>
</div>
<div class="inlinemobile">
<div class="d-flex">
<span class="dotred"></span>
<p class="criterioslegendared"> Comprovadamente associados a danos graves </p>
</div>
</div>
<div class="d-flex">
<span class="dotgrey"></span>
<p class="criterioslegendagrey"> Potencial inconclusivo   </p>
</div>
</div>
</div>
</div>

<div class="row justify-content-center desktopposition">
  <div class="column d-flex flex-wrap">
     <% @ingredients.each do |ingredient| %>
     <%= link_to ingredient_path(ingredient) do %>
     <div class="card sizecarddesk shadow-sm bg-white mt-3 ml-3" style="width: 20rem; border-radius: 8px; ">
        <div class="card-body d-flex justify-content-start">
         <div class="d-flex align-items-end position">
            <% if ingredient.name == "PARFUM" %>
            <li class="card-text fontingredientindex"><%= ingredient.name %><%= image_tag "alert.svg", class:"alertsize" %></li>
        <% else %>
            <li class="card-text fontingredientindex"><%= ingredient.name %></li>
        <% end %>
        </div>

        <div class="d-flex">
        <div class="margincardingredient">
        <%= image_tag "saude.svg", class:"marginhealth2" %>
          <% if ingredient.risk_to_health == "yellow" %>
            <span class="dotyellow2"></span>
          <% elsif ingredient.risk_to_health == "red"  %>
            <span class="dotred2"></span>
          <% elsif ingredient.risk_to_health == "grey"  %>
            <span class="dotgrey2"></span>
          <% elsif ingredient.risk_to_health == "orange"  %>
            <span class="dotorange2"></span>
          <% else %>
            <span class="dotgreen2"></span>
          <% end %>
        </div>

        <div class="margincardingredient">
          <%= image_tag "ambiente.svg", class:"marginenvironment" %>
          <% if ingredient.risk_to_enviroment == "yellow" %>
            <span class="dotyellow2"></span>
          <% elsif ingredient.risk_to_enviroment == "red"  %>
            <span class="dotred2"></span>
          <% elsif ingredient.risk_to_enviroment == "orange"  %>
            <span class="dotorange2"></span>
          <% elsif ingredient.risk_to_enviroment == "grey"  %>
            <span class="dotgrey2"></span>
          <% else %>
            <span class="dotgreen2"></span>
          <% end %>
        </div>
        <div class="margincardingredient">
        <%= image_tag "alergia.svg", class:"marginhealth3" %>
          <% if ingredient.allergenic == "sim" %>
          <span class="dotred2"></span>
          <% else %>
          <span class="dotgreen2"></span>
          <% end %>
        </div>
        </div>
        <div class="d-flex justify-content-end">

          <%= image_tag "Componente.svg", class:"componentingredient" %>
        <% end %>
        </div>
        </div>
     </div>
     <% end %>

  </div>
</div>
