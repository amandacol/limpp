<style>
.position{
      margin-left: -10px;
}
 .shadowcss{
      box-shadow: 2px 2px 4px #D6D6D6;
}
.notavailable{
      color: #707070;
      font-family: 'Montserrat', sans-serif;
      font-size: 12px !important;
      margin-left: -64px;
      position: absolute;
      top: 76px;
      left: 162px;
      color: #67D89E;
      font-size: 14px;
      font-weight: bold;
}
.star{
      color: #33D89E;
      width: 10px;
    }
.case{
      position: absolute;
      bottom: -2px;
      left: 162px;
    }
.space{
      position: absolute;
      bottom: 0px;
      right: 17px;
    }
.desconto{
      width: 35px;
      height: 35px;
    }
.btn-purpleheart{
      color: #8F89DD;
      width: 30px;
      font-size: 25px;
    }
.btn-greyheart{
      color: #00000029;
      width: 30px;
      font-size: 25px;
      margin-left: 5px;
    }
</style>
<div class="card shadow-sm bg-white mt-3" style="width: 20rem; border-radius: 8px; ">
     <div class="card-body d-flex justify-content-start">
       <div class="d-flex align-items-end position">
       <% if @item.photo.attached? %>
        <%= cl_image_tag @item.photo.key, width: 80, height: 80, crop: :pad, class:"shadowcss bg-white rounded" %>
       <% else %>
        <img src="https://images.unsplash.com/photo-1503236823255-94609f598e71?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" class="card-photo"/>
       <% end %>
       <% if @item.reviews.empty? %>
          <p class="card-text notavailable"><%= "NÃ£o avaliado ainda" %></p>
          <% else %>
          <% @item.calculate_average.times do %>
            <i class="fas fa-star star ml-2"></i>
          <% end %>
       <% end %>
       </div>
       <p class="card-text font case"><%= @item.name %></p>
       <div class="d-flex justify-content-end space">
          <% if @item.coupons.exists? %>
          <%= link_to item_coupons_path(@item) do %>
            <%= image_tag "desconto2.png", class:"desconto mt-2" %>
          <% end %>
          <% end %>
          <%= simple_form_for [@item, Wishlist.new] do |s|  %>
            <% if @user_wishlists.include? @item  %>
              <button type="submit" class="btn btn-purpleheart">
                <i class="fas fa-heart"></i>
              </button>
                <% else %>
                <button type="submit" class="btn btn-greyheart">
                <i class="fas fa-heart"></i>
              </button>
                <% end %>
            <% end %>
       </div>
     </div>
</div>
