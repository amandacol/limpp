<style>
  #content-wrap{
    padding-bottom: 4em;
  }
  .upload-photo{
      color: #707070;
      font-size: 14px;
      height: 84px;
      width:180px;
  }
</style>

<%= simple_form_for @newitem do |f| %>
        <%= f.input :email,
                  label: "Seu e-mail para contato em caso de dúvidas (prometemos não enviar SPAM)",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= image_submit_tag("fotografia.png", class: 'lupa ml-2') %>
      <% end %>
