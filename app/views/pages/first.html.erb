<div class="container-fluid mt-5">
  <style>
    .image{
      width: 120px;
    }
    .lupa{
      width: 30px;
    }
    .codigo{
      width: 60px;
    }
    .hair{
      width: 20px;
    }
    .personal{
      width: 50px;
    }
    .skin{
      width: 30px;
    }
    .make{
      width: 40px;
    }
    .posts{
      width: 200px;
    }
    .font{
      color: #333132;
      font-size: 14px;
    }
  </style>
  <div class="d-flex justify-content-center">
    <%= image_tag "limpp-logo-cor.png", class:'image' %>
  </div>
    <form>
    <div class="d-flex justify-content-center">
     <div class="input-group mb-3">
        <%= form_tag items_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control rounded-pill shadow-sm p-3 bg-white rounded",
          placeholder: "Busque por um produto ou ingrediente"
        %>
      <%= image_submit_tag("lupa.svg", class: 'lupa ml-3') %>
      <% end %>
     </div>
    </div>
   </form>
  <div class="d-flex justify-content-around mt-5">
    <div>
    <%= image_tag "hair.svg", class:'hair ml-4' %>
    <p class="font mt-1">Cabelos</p>
    </div>
    <div>
    <%= image_tag "personal.svg", class:'personal ml-3' %>
    <p class="font ml-3">Higiene Pessoal</p>
    </div>
    <div>
    <%= image_tag "skin.svg", class:'skin ml-4' %>
    <p class="font mt-1 ml-1">Cuidados com a Pele</p>
    </div>
    <div>
    <%= image_tag "make.svg", class:'make ml-4' %>
    <p class="font mt-1">Maquiagem</p>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-5">
    <%= image_tag "Posts-limpp.png", class:'posts' %>
  </div>
</div>
