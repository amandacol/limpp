<div class="container-fluid">
  <style>
    .font{
      color: #707070;
      font-family: 'Montserrat', sans-serif;
      font-size: 14px;
      margin-left: -70px;
      height: 84px;
      width:180px;
    }
    .fontbuy{
      color: #707070;
      font-family: 'Montserrat', sans-serif;
      font-size: 14px;
      height: 4px;
      width:180px;
      white-space: nowrap;
    }
    .desconto{
      width: 35px;
      height: 35px;
    }
    .btn-cadastrar{
      color: white;
      background-color: #333132;
      border-radius: 30px;
      padding: 0.3rem 1rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 13px;
      box-shadow: 0px 2px 2px #33313261;
    }
    p{
    color: #707070;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    text-decoration: none;
    }
    .position{
      margin-left: -5px;
    }
    .space{
      position: absolute;
      bottom: 0px;
      right: 17px;
    }
    .card-body{
      padding: 0.7rem;
    }
    .notavailable{
      position: absolute;
      bottom: -56px;
      left: 162px;
      color: #67D89E;
      font-size: 14px;
      font-weight: bold;
    }
    .case{
      position: absolute;
      bottom: -20px;
      left: 180px;
    }
    .star{
      color: #33D89E;
      width: 10px;
    }
    .nav-link{
    display: block;
    padding: 0.5rem 0.6rem !important;
}
    .sizelogo{
      width: 60px;
    }
    .backgroud{
      background-color:#F2F2F2;
      border-radius: 20px;
      padding: 10px;
    }
    .buyagain{
      color: #33D89E;
      background-color: white;
      border-radius: 30px;
      padding: 0.4rem 1.2rem;
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      font-size: 15px;
    }
    .select{
      color: #707070;
      font-family: 'Montserrat', sans-serif;
      font-size: 14px;
    }
    a.br-active:after {
      color: #67D89E !important;
    }

    a.br-selected:after {
      color: #67D89E !important;
    }
    body {
      padding-top: 50px;
    }

    .starter-template {
      padding: 40px 15px;
      text-align: center;
    }
    .fonthumby{
      color: #33D89E;
      background-color: white;
      border-radius: 15px;
      font-family: 'Montserrat', sans-serif;
      font-size: 16px;
      padding: 8px;
      height: 4px;
      width:180px;
      white-space: nowrap;
    }
    .fonthumby:hover{
      color: #707070;
    }
    .fonthumbno{
      color: #33D89E;
      background-color: white;
      border-radius: 15px;
      font-family: 'Montserrat', sans-serif;
      font-size: 16px;
      padding: 8px;
      height: 4px;
      width:180px;
      white-space: nowrap;
    }
    .fonthumbno:hover{
      color: #D93500;
    }
    .shadowcss{
      box-shadow: 2px 2px 4px #D6D6D6;
    }
  </style>
  <div class="container p-1">
  <div class="card shadow-sm bg-white mt-3" style="width: 20rem; border-radius: 8px; ">
     <div class="card-body d-flex justify-content-start">
       <div class="d-flex align-items-end position">
       <% if @item.photo.attached? %>
        <%= cl_image_tag @item.photo.key, width: 80, height: 80, crop: :fill, class:"shadowcss bg-white rounded" %>
       <% else %>
        <img src="https://images.unsplash.com/photo-1503236823255-94609f598e71?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" class="card-photo"/>
       <% end %>
       </div>
       <p class="card-text font case"><%= @item.name %></p>
     </div>
  </div>

  <div class="backgroud mt-3 mr-2">
    <div class="p-2 ml-2 justify-content-center">
      <div class="field mt-4">
        <%= simple_form_for [@item, @review] do |f| %>
          <%= f.input :rating, collection: [ 1, 2, 3, 4, 5], label: "De 1 a 5, o quanto aprova a qualidade desse produto?" %>
          <p class="fontbuy mt-3 align-self-center mb-5">Você compraria esse produto novamente?</p>
          <span class="likeitem fonthumby"><i class="far fa-thumbs-up"></i> Sim</span>
          <span class="dislikeitem fonthumbno ml-4"><i class="far fa-thumbs-down"></i> Não</span>
          <%= f.check_box :buyagain, class: "d-none" %>
      </div>
      <div class="mt-3">
        <%= f.submit 'Clique para avaliar', :class => "btn btn-cadastrar mt-4 mb-3" %>
        <% end %>
      </div>
        </div>
      </div>
    </div>
  </div>
</div>
