  <div class="d-flex justify-content-end">
  <% if user_signed_in? %>
  <div class="dropdown mr-4 mt-1">
  <%= image_tag "menunavbar.svg" %>
  <div class="dropdown-content">
    <figure class="d-flex align-items-center mt-3">
      <%= image_tag "usuario.svg", class:'userlog' %><figcaption class="ml-2 mt-1"> <%= current_user.email %></figcaption>
    </figure>
    <li>
      <%= link_to root_path, class:"dropdown-item fontnav" do %>
      <figure class="d-flex align-items-center mt-3">
        <%= image_tag "inicio.png" %><figcaption class="ml-2 mt-1"> Início</figcaption>
      </figure>
      <% end %>
      <p class="line"></p>

      <%= link_to ingredients_path, class:"dropdown-item fontnav" do %>
      <figure class="d-flex align-items-center mt-3">
        <%= image_tag "lupa2.png" %><figcaption class="ml-2 mt-1"> Buscar por ingrediente</figcaption>
      </figure>
      <% end %>
      <p class="line"></p>

      <%= link_to requested_ingredients_path, class:"dropdown-item fontnav" do %>
      <figure class="d-flex align-items-center mt-3">
        <%= image_tag "code.svg" %><figcaption class="ml-2 mt-1"> Sugerir avaliação de um ingrediente </figcaption>
      </figure>
      <% end %>
      <p class="line"></p>

      <%= link_to responsibleingredient_path, class:"dropdown-item fontnav" do %>
      <figure class="d-flex align-items-center mt-3">
        <%= image_tag "responsa.svg" %><figcaption class="ml-2 mt-1"> Responsabilidade limpp</figcaption>
      </figure>
      <% end %>
      <p class="line"></p>
      <%= link_to destroy_user_session_path, method: :delete, class:"dropdown-item fontnav" do %>
      <figure class="d-flex align-items-center mt-3">
        <%= image_tag "logout.png" %><figcaption class="ml-2 mt-1"> Log out</figcaption>
      </figure>
      <% end %>
      <p class="line"></p>
    </li>
  </div>
  </div>
  <% end %>
  </div>
