<div class="container-fluid mt-5">
  <style>
    .font{
      color: #707070;
      font-size: 14px;
      margin-left: -80px;
      height: 84px;
      width:180px;
    }
    .card-photo{
      box-shadow: 0px 2px 2px #33313261;
      border-radius: 8px;
      height: 70px;
      width: 40%;
    }
    .position{
      margin-left: -25px;
    }
    .space{
      margin-top: 60px;
    }
     .card-body{
      padding: 0.7rem;
    }
    .desconto{
      width: 35px;
      height: 35px;
    }
  </style>
  <form>
    <div class="d-flex justify-content-center">
     <div class="input-group mb-3">
        <%= form_tag items_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control rounded-pill shadow-sm p-3 bg-white rounded",
          placeholder: "Busque por um produto ou ingrediente"
        %>
      <%= image_submit_tag("lupa.svg", class: 'lupa ml-2') %>
      <% end %>
     </div>
    </div>
   </form>
<div class="card-body d-flex justify-content-around">
     <% @user_wishlists.each do |wishlist| %>
     <div class="card shadow-sm bg-white mt-3" style="width: 20rem; border-radius: 8px; ">
      <div class="card-body d-flex justify-content-start">
       <div class="d-flex align-items-end position">
         <% if wishlist.item.photo.attached? %>
         <%= cl_image_tag wishlist.item.photo.key, width: 100, height: 100, crop: :fill %>
         <% else %>
         <img src="https://images.unsplash.com/photo-1503236823255-94609f598e71?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" class="card-photo"/>
         <% end %>
       </div>
       <p class="card-text font ml-1"><%= wishlist.item.name %></p>
       <div class="d-flex justify-content-end space">
         <%= image_tag("desconto2.png", class: 'desconto mb-1') %>
         <div>
          <%= link_to '<i class="far fa-trash-alt ml-2 mt-2"></i>'.html_safe, item_wishlist_path(wishlist.item.id, wishlist.id), method: :delete, data: { confirm: 'Tem certeza?' }%></p>
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <%= link_to item_path(:item_id), class:"component" do %>
        <%= image_tag "Componente.svg" %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
