<div class="container-fluid mt-5">
  <style>
    .image{
      width: 140px;
    }
    .font{
      color: #707070;
      font-size: 14px;
      margin-left: -64px;
      height: 84px;
      width:180px;
    }
    .card-photo{
      box-shadow: 0px 2px 2px #33313261;
      border-radius: 8px;
      height: 70px;
      width: 40%;
    }
    .position{
      margin-left: -10px;
    }
    .space{
      position: absolute;
      bottom: 0px;
      right: 17px;
    }
     .card-body{
      padding: 0.7rem;
    }
    .desconto{
      width: 35px;
      height: 35px;
    }
    .notavailable{
      position: absolute;
      bottom: -56px;
      left: 162px;
      color: #67D89E;
      font-size: 14px;
      font-weight: bold;
    }
    .case{
      position: absolute;
      bottom: -2px;
      left: 162px;
    }
    .component{
      position: absolute;
      top: 8px;
      right: 17px;
    }
    .trash{
      color: #33D89E;
    }
    .row{
      margin: 0 -7px;
    }
    .shadowcss{
      box-shadow: 2px 2px 4px #D6D6D6;
    }
    .star{
      color: #33D89E;
      width: 10px;
    }
    .prateleira{
      color: #333132;
      font-family: 'Montserrat', sans-serif;
      font-weight: bold;
    }
  </style>
<div class="container p-1">
  <div class="d-flex justify-content-center">
    <%= image_tag "wishlistlogo.png", class:'image' %>
  </div>
  <p class="prateleira d-flex justify-content-center mt-2">Sua prateleira de produtos</p>
  <form>
    <div class="d-flex justify-content-center mt-4">
       <div class="input-group mb-3">
          <%= form_tag wishlists_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control rounded-pill shadow-sm p-3 bg-white rounded",
            placeholder: "Busque na sua lista de desejos"
          %>
        <%= image_submit_tag("lupa.svg", class: 'lupa ml-2') %>
        <% end %>
       </div>
    </div>
   </form>

<div class="row justify-content-center">
<div class="column d-flex flex-wrap">
  <% @user_wishlists.each do |wishlist| %>
  <div class="card shadow-sm bg-white mt-3 ml-3" style="width: 20rem; border-radius: 8px; ">
      <div class="card-body d-flex justify-content-start">
        <div class="d-flex align-items-end position">
         <% if wishlist.item.photo.attached? %>
          <%= cl_image_tag wishlist.item.photo.key, width: 80, height: 80, crop: :fill, class:"shadowcss bg-white rounded" %>
         <% else %>
           <img src="https://images.unsplash.com/photo-1503236823255-94609f598e71?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" class="card-photo"/>
         <% end %>
         <% if wishlist.item.reviews.empty? %>
           <p class="card-text font notavailable"><%= "Item nÃ£o avaliado" %></p>
         <% else %>
            <% wishlist.item.calculate_average.round(0).times do %>
              <i class="fas fa-star star ml-2"></i>
            <% end %>
         <% end %>
        </div>
           <p class="card-text font case"><%= wishlist.item.name %></p>
          <div class="d-flex justify-content-end space">
          <% if wishlist.item.coupons.exists? %>
          <%= link_to item_coupons_path(wishlist.item) do %>
            <%= image_tag "desconto2.png", class:"desconto mb-1" %>
          <% end %>
          <% end %>
          <div>
            <%= link_to '<i class="far fa-trash-alt trash ml-2 mt-2"></i>'.html_safe, item_wishlist_path(wishlist.item.id, wishlist.id), method: :delete, data: { confirm: 'Tem certeza?' }%></p>
          </div>
        </div>
        <div class="d-flex justify-content-end">
           <%= link_to item_path(wishlist.item), class:"component" do %>
           <%= image_tag "Componente.svg" %>
           <% end %>
        </div>
      </div>
    </div>
    <% end %>
 </div>
  </div>
 </div>
</div>
